<h2 style="font-size: 15px; font-weight: bold;">选择产品</h2>
<%= form_for(:subjects, :url => add_subjects_business_activity_path(params[:activity_id]), :remote => true, :html => {:id => "subjects_form"})  do |f|%>
  <div class = "list-subjects" style="height:300px;">
    <% @subjects.each do |subject| %>
      <div>
        <dl>
          <dt class="picture">
            <%= image_tag(subject.image ? subject.image.data.url(:thumb) : "blank-thumb.jpg") %>
          </dt>
          <dd>
            价格：<%=number_to_currency subject.price %><br/>
            <%= check_box_tag "subject[]", subject.id %><%=subject.name%><br/>
          </dd>
        </dl>
      </div>
    <% end %>
    <p class="clear"></p>
  </div>
  <%= will_paginate @subjects%>
  <div align="center">
    <%= image_submit_tag("small-ok.jpg") %>
    <%= image_tag "small-close.jpg", :onclick => "parent.close_choose_subjects_dialog()", :style => "cursor:pointer"  %>
  </div>
<% end %>